# ============================
# Server configuration
# ============================
PORT=                # Port number the backend server runs on (e.g. 8080)

# ============================
# Database
# ============================
MONGODB_URI=         # MongoDB connection string (Atlas or local)

# ============================
# JWT tokens
# ============================
JWT_REFRESH_SECRET=  # Secret key for refresh tokens
JWT_REFRESH_EXPIRED= # Refresh token expiration (e.g. 7d)
JWT_ACCESS_SECRET=   # Secret key for access tokens
JWT_ACCESS_EXPIRED=  # Access token expiration (e.g. 15m)

# ============================
# Email verification
# ============================
JWT_EMAIL_VERIFY_SECRET= # Secret for email verification tokens
JWT_EMAIL_VERIFY_EXPIRE= # Expiration for email verification token (e.g. 10m)

# ============================
# URLs
# ============================
BACKEND_BASE_URL=    # Base URL of backend API (e.g. http://localhost:8080)

# ============================
# Mailer (SMTP)
# ============================
MAIL_HOST=           # SMTP server host
MAIL_PORT=           # SMTP port (usually 465 or 587)
MAIL_USER=           # SMTP username
MAIL_PASS=           # SMTP password
MAIL_FROM=           # Default sender email address (e.g. no-reply@domain.com)

# ============================
# Rate limiting
# ============================
RATE_LIMIT_DEFAULT_TTL=   # Time-to-live in seconds (e.g. 60)
RATE_LIMIT_DEFAULT_LIMIT= # Max number of requests per TTL (e.g. 5)
